{
  "name": "express-boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/app.ts",
    "start:watch": "nodemon --exec 'ts-node -r tsconfig-paths/register' src/app.ts",
    "build": "tsc --builder",
    "db-migrate": "knex migrate:latest --env=development --knexfile=src/database/config.ts",
    "db-seed": "knex seed:run --env=development --knexfile=src/database/config.ts",
    "db-rollback": "knex migrate:rollback --env=development --knexfile=src/database/config.ts",
    "db-init": "npm run db-migrate && npm run db-seed",
    "db-migrate:create": "knex migrate:make --env=development --knexfile=src/database/config.ts",
    "db-up": "docker compose up -d",
    "db-down": "docker compose down"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-validator": "^7.2.1",
    "http-status": "^2.1.0",
    "knex": "^3.1.0",
    "objection": "^3.1.5",
    "pg": "^8.14.1",
    "uuid": "^11.1.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.23.0",
    "@types/express": "^5.0.1",
    "@types/node": "^22.13.14",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.5",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.3",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.28.0"
  }
}
